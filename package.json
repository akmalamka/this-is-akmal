{
  "name": "this-is-akmal",
  "description": "A personal portfolio of Muhammad Akmal",
  "homepage": "https://thisisakmal.xyz",
  "keywords": [
    "Portfolio",
    "Sanity",
    "Next.js",
    "Headless CMS",
    "Visual Editing"
  ],
  "scripts": {
    "dev:all": "pnpm --stream -r run dev",
    "dev:next": "pnpm --filter frontend dev",
    "dev:studio": "pnpm --filter studio dev",
    "dev": "next dev --turbopack",
    "build": "next build",
    "export": "next export",
    "start": "next start",
    "lint": "next lint",
    "analyze": "ANALYZE=true pnpm build"
  },
  "dependencies": {
    "@next/bundle-analyzer": "^15.4.6",
    "@radix-ui/react-visually-hidden": "^1.2.3",
    "@sanity/asset-utils": "^2.2.1",
    "@sanity/client": "^7.8.1",
    "@sanity/image-url": "^1.1.0",
    "@sanity/uuid": "^3.0.2",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@vercel/speed-insights": "^1.2.0",
    "classnames": "^2.5.1",
    "lenis": "^1.3.8",
    "motion": "^12.23.12",
    "next": "^15.4.5",
    "next-sanity": "^9.12.3",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sanity": "^3.99.0",
    "sonner": "^1.7.4",
    "styled-components": "^6.1.19",
    "tailwindcss": "^4.1.11",
    "vaul": "^1.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^20.19.9",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vinicunca/eslint-config": "^3.20.0",
    "eslint": "^9.32.0",
    "lint-staged": "^16.1.4",
    "simple-git-hooks": "^2.13.1",
    "typescript": "5.6.3"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "npx --no-install commitlint --edit \"$1\""
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm eslint --fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
